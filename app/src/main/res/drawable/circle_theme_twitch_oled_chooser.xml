<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer black circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/oled_background" />
            <stroke
                android:width="2dp"
                android:color="@color/twitch_purple" />
            <size
                android:width="48dp"
                android:height="48dp" />
        </shape>
    </item>
    <!-- Inner purple accent dot -->
    <item
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp">
        <shape android:shape="oval">
            <solid android:color="@color/twitch_purple" />
            <size
                android:width="16dp"
                android:height="16dp" />
        </shape>
    </item>
</layer-list>
