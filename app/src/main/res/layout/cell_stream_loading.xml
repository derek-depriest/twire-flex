<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="?attr/mainCardBackgroundColor"
    app:cardCornerRadius="@dimen/stream_card_corner_radius_modern"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/stream_card_padding">

        <!-- Stream Preview Placeholder -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bg_loading_placeholder" />

        <!-- Stream Info Placeholder -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/stream_info_margin_top"
            android:orientation="vertical">

            <!-- Title placeholder line 1 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="@drawable/bg_loading_placeholder" />

            <!-- Title placeholder line 2 -->
            <View
                android:layout_width="200dp"
                android:layout_height="16dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_loading_placeholder" />

            <!-- Game name placeholder -->
            <View
                android:layout_width="120dp"
                android:layout_height="14dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_loading_placeholder" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
