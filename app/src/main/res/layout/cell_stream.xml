<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView_online_streams"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="?attr/mainCardBackgroundColor"
    app:cardCornerRadius="@dimen/stream_card_corner_radius_modern"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/stream_card_padding">

        <!-- Stream Preview Container with Overlays -->
        <FrameLayout
            android:id="@+id/preview_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Stream Preview Image with rounded corners -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_stream_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:contentDescription="@string/my_streams_preview_image"
                app:shapeAppearanceOverlay="@style/StreamPreviewRounded" />

            <!-- Live badge overlay -->
            <TextView
                android:id="@+id/live_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_margin="@dimen/stream_badge_margin"
                android:background="@drawable/bg_live_badge"
                android:paddingHorizontal="@dimen/stream_badge_padding_horizontal"
                android:paddingVertical="@dimen/stream_badge_padding_vertical"
                android:text="@string/stream_live_badge"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                tools:ignore="SmallSp" />

            <!-- Viewer count overlay -->
            <LinearLayout
                android:id="@+id/viewer_count_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="@dimen/stream_badge_margin"
                android:background="@drawable/bg_viewer_count"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/stream_badge_padding_horizontal"
                android:paddingVertical="@dimen/stream_badge_padding_vertical">

                <ImageView
                    android:layout_width="@dimen/stream_viewer_icon_size"
                    android:layout_height="@dimen/stream_viewer_icon_size"
                    android:layout_marginEnd="4dp"
                    android:contentDescription="@string/stream_viewers_icon_desc"
                    android:src="@drawable/ic_viewers"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/viewer_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    tools:text="1.2K" />
            </LinearLayout>

            <!-- Channel name overlay on preview -->
            <TextView
                android:id="@+id/displayName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_margin="@dimen/stream_badge_margin"
                android:maxLines="1"
                android:text="@string/preview_stream_display_name"
                android:textAppearance="@style/text_title_w_shadow"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </FrameLayout>

        <!-- Stream Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/stream_info_margin_top"
            android:orientation="vertical">

            <!-- Stream Title -->
            <TextView
                android:id="@+id/stream_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/preview_stream_title"
                android:textAppearance="@style/cardPrimaryText"
                android:textSize="14sp" />

            <!-- Shared Padding -->
            <View
                android:id="@+id/shared_padding"
                android:layout_width="match_parent"
                android:layout_height="4dp" />

            <!-- Game and Online Since -->
            <TextView
                android:id="@+id/stream_game_and_viewers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/preview_stream_game_and_viewers"
                android:textAppearance="@style/cardSecondaryText"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/stream_online_since"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/preview_stream_online_since"
                android:textAppearance="@style/cardSecondaryText"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
